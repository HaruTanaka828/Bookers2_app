
<div class="container">
    <div class="row">

<div class="col-xs-3">

<% if flash[:notice] %>
 <div class="flash">
<%= flash[:notice] %>
</div>
<% end %>

<h1>User info</h1>

<%= attachment_image_tag @user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg" %>


<table class="table">

<tr>

<td>name</td>

<td><%= @user.name %></td>

</tr>

<td>introduction</td>

<td><%= @user.introduction %></td>

</tr>

</table>


<% if @user.id == current_user.id %>
<%= link_to edit_user_path(current_user) do %>
<button type="button" class="btn btn-default btn-block"><span class="glyphicon glyphicon-wrench" aria-hidden="true"></span>
</button>
<% end %>
<% else %>
<%= link_to user_path(current_user.id) do %>
<button type="button" class="btn btn-default btn-block"><span class="glyphicon glyphicon-wrench" aria-hidden="true"></span>
</button>
<% end %>
<% end %>



<h1>New book</h1>

<%= form_for(@book_new) do |f| %>

  <h4>Title</h4>

<div class="row">
  <div class="col-md-12">
  <%= f.text_field :title, class:"form-control" %>
  </div>
</div>

  <h4>Opinion</h4>

<div class="row">
  <div class="col-xs-12">
    <div class="kuhaku">
  <%= f.text_area :body, class:"form-control" %>
</div>
  </div>
</div>

  <div>
  <%= f.submit "Create Book" ,class:"btn btn-block btn-primary"%>
  </div>

<% end %>


</div>

<div class="col-xs-9">

<h1>Book detail</h1>

<table class="table table-striped">
     <thead>
        <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th></th>
            <th></th>
            <th></th>
            <th></th>
        </tr>
     </thead>
     <tbody>
            <tr>
              <td>
                <%= link_to user_path(@user.id) do %>
                 <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg" %>
                 <p><%= @user.name %></p>
                <% end %>
              </td>

                <td><%= @book.title %></td>
                <td><%= @book.body %></td>

                <td>
                  <% if @book.favorited_by?(current_user) %>

                   <%= link_to book_favorites_path(@book), method: :delete do %>
                   <i class="fa fa-heart" aria-hidden="true" style="color: red;"></i>
                   <%= @book.favorites.count %>
                   <% end %>
                   <% else %>
                   <%= link_to book_favorites_path(@book), method: :post do %>
                   <i class="fa fa-heart-o" aria-hidden="true"></i>
                   <%= @book.favorites.count %>
                   <% end %>

                  <% end %>
                </td>

                <td><i class="fa fa-comment-o" aria-hidden="true"></i><%= @book.book_comments.count %></td>

                <% if @book.user == current_user %>

                <td><%= link_to "Edit", edit_book_path(@book.id) %></td>
                <td><%= link_to 'Destroy',book_path(@book), method: :delete, "data-confirm" => "本当に消しますか?" %></td>

                <% end %>
            </tr>
     </tbody>
</table>

<h3>Comments</h3>

<div class="comments-index">

  <% @book.book_comments.each do |book_comment| %>

  <table class="table">
    <thead>
      <tr>
        <th></th>
        <th></th>
        <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td>
        <div class="comment-user-image">
            <%= attachment_image_tag book_comment.user, :profile_image, :fill, 40, 40, fallback: "no_image.jpg" %>
        </div>
        </td>
        <td>
          <div class="comment-text">
          <%= book_comment.comment %>
          </div>
        </td>
        <td>
          <div class="comment-meta">
          <span class="comment-date"><%= book_comment.created_at.strftime('%Y/%m/%d') %></span>
          </div>
        </td>


        <td>
          <% if book_comment.user == current_user %>
            <div>
              <%= link_to "Destroy", book_book_comment_path(book_comment.book, book_comment), method: :delete, class: "btn btn-light pull-right" %>
            </div>
          <% end %>
        </td>
        <td></td>

    </tr>
  </tbody>
  </table>

  <% end %>
</div>


<div class="comments-form">

<%= form_for [@book, @book_comment] do |f| %>
  <div class="row">
    <div class="col-sm-12">
      <%= f.text_area :comment, rows:'3', class: "form-control",placeholder: "コメントをここに" %>
    </div>
  </div>
  <%= f.submit "Comment", class: "btn btn-success btn-base-1 mt-20 pull-right" %>
<% end %>


</div>





</div>
</div>
</div>